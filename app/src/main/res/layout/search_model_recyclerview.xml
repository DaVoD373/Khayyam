<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cons_search_recycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txt_search_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_text_view"
        android:gravity="start"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:textColor="@color/text_title"
        android:textSize="@dimen/text_view_title"
        fontPath="font/rajab.ttf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="گویند هر آن کسان که با پرهیزند"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/txt_poem_number"
        fontPath="font/rajab.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingRight="24dp"
        android:paddingTop="4dp"
        android:background="@drawable/selector_text_view"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_search_recyclerView"
        tools:text="رباعی 55"
        tools:ignore="MissingPrefix" />

</android.support.constraint.ConstraintLayout>