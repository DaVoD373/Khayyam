<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">

    <ss.com.bannerslider.views.BannerSlider
        android:id="@+id/banner_slider_main"
        app:loopSlides="true"
        app:defaultIndicators="circle"
        app:interval="7000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/txt_menu_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu"
        android:textColor="@color/text_title"
        android:textSize="@dimen/text_view_title"
        app:layout_constraintBottom_toBottomOf="@+id/image_menu_main"
        app:layout_constraintStart_toEndOf="@+id/image_menu_main"
        app:layout_constraintTop_toTopOf="@+id/image_menu_main" />

    <ImageView
        android:id="@+id/image_menu_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner_slider_main"
        app:srcCompat="@drawable/vc_list"
        tools:ignore="VectorDrawableCompat" />
</android.support.constraint.ConstraintLayout>